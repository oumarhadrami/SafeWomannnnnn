<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hadrami.oumar.safewoman.SettingsActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:gravity="start|center"
                android:layout_marginLeft="25dp"
                android:text="Name" />

            <EditText
                android:layout_width="0dp"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="Enter Name.." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:layout_marginLeft="25dp"
                android:text="Mobile" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_weight="4"
                android:hint="Enter moble number.." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:gravity="start|center"
                android:layout_marginLeft="25dp"
                android:text="Email" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_weight="4"
                android:hint="Enter EmailId.." />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="Mobile Numebrs"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>



        <ListView
            android:layout_width="match_parent"
            android:id="@+id/mobile_number_listview"
            android:layout_height="100dp">

        </ListView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_black_24dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:id="@+id/add_mobile" />










    </LinearLayout>
    </ScrollView>

</LinearLayout>
